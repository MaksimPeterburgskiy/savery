{
  // See https://code.visualstudio.com/docs/editor/debugging and
  // https://code.visualstudio.com/docs/python/debugging for config details
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web API",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/backend/.env",
      "module": "uvicorn",
      "args": [
        "backend.app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "subProcess": true,
      "justMyCode": true,
    "consoleTitle": "Web API",
    "postDebugTask": "stop services (postgres+rabbitmq+dragonfly)",

    },
    {
      "name": "Celery",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/backend/.env",
      "module": "celery",
      "args": [
        "-A",
        "backend.workers.celery_app:celery_app",
        "worker",
        "-l",
        "info",
        "--pool",
        "solo"
      ],
      "justMyCode": true,
       "consoleTitle": "Celery",

    },

    {
        "name": "Expo",
        "type": "pwa-node",
        "request": "launch",
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}/frontend/savery",
        "runtimeExecutable": "npx",
        "args": [
            "expo",
            "start",
            "--tunnel"
        ],
        "justMyCode": true,
        "consoleTitle": "Expo",
    }

  ],
  "compounds": [
    {
      "name": "Run - Backend",
      "configurations": [
        "Web API",
        "Celery"
      ],
      "stopAll": true,
      "preLaunchTask": "start services (postgres+rabbitmq+dragonfly)",
      "postDebugTask": "stop services (postgres+rabbitmq+dragonfly)",
    },
    
    {
      "name": "Run - Expo + Backend",
      "configurations": [
        "Expo",
        "Web API",
        "Celery"
      ],
      "stopAll": true,
      "preLaunchTask": "start services (postgres+rabbitmq+dragonfly)",
      "postDebugTask": "stop services (postgres+rabbitmq+dragonfly)",
    }
  ]
}
